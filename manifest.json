{
    "manifest_version": 3,
    "name": "ChatGPT Prompt Bar",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"]
        }
    ]
}
